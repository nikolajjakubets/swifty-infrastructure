server {
    listen 80;
    server_name {{ hostvars[groups['gw'][0]]['public_dns'] }};

    location ~* ^/call/(.*) {
        proxy_pass http://{{ hostvars[groups['gw'][0]]['vpn_ip'] }}:8684/call/$1$is_args$args;
        proxy_set_header Host $host;
    }

    location ~* ^/gate/(.*) {
        proxy_pass http://{{ hostvars[groups['gw'][0]]['vpn_ip'] }}:8684/$1$is_args$args;
        proxy_set_header Host $host;
    }

    location ~* ^/admd/(.*) {
        proxy_pass http://{{ hostvars[groups['gw'][0]]['vpn_ip'] }}:8685/$1$is_args$args;
        proxy_set_header Host $host;
    }

}