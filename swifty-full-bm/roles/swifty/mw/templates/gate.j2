---
home: "/home/swifty"
db: "swygate:DBPASS@127.0.0.1:27017"
keystone:
        address: "127.0.0.1:5000"
        domain: "swifty"
daemon:
        address: "{{ hostvars[groups['gw'][0]]['vpn_ip'] }}:8686"
        callgate: "https://{{ hostvars[groups['gw'][0]]['public_dns'] }}"
        loglevel: "debug"
        prometheus: "127.0.0.1:9012"
middleware:
        mwseckey: "MWSECPASS"
        maria:
                creds: "root:-@{{ hostvars[groups['mw'][0]]['vpn_ip'] }}:3306"
                quotdb: "swifty.QUOTAS"
        rabbit:
                creds: "root:RABBITPASS@127.0.0.1:5672"
                admport: "15672"
        mongo:
                creds: "admin:MONGOPASS@{{ hostvars[groups['mw'][0]]['vpn_ip'] }}:27017"
        postgres:
                creds: "-:PGRTOKEN@swft-mw:5432"
                admport: "3872"
        s3:
                creds: "-:S3TOKEN@{{ hostvars[groups['mw'][0]]['public_dns'] }}:8789"
                api: "{{ hostvars[groups['mw'][0]]['public_dns'] }}"
                notify: "swifty:S3IFYPASS@{{ hostvars[groups['gw'][0]]['vpn_ip'] }}:5672/s3"
                hidden-key-timeout: 120
runtime:
        timeout:
                max: 60
                def: 1
        memory:
                max: 1024
                min: 64
                def: 128
        max-replicas: 32
wdog:
        img-prefix: "swiftycloudou"
        volume: "/home/swifty-volume"
        port: 8687
logs-keep: 2
repo-sync-rate: 5
repo-sync-period: 60
